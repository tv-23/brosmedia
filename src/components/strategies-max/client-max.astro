<!-- Modal -->
<div
    class="modal fade"
    id="MaxModal"
    tabindex="-1"
    aria-labelledby="MaxModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog" style="max-width: 800px;">
        <div class="modal-content">
            <div class="modal-header">
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                >
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body">
