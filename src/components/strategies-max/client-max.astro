                                <AppointmentForm />
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", () => {
        const thumbnail = document.getElementById("video-thumbnail");
        if (!thumbnail) return;

        const playVideo = () => {
            const videoId = "dQw4w9WgXcQ"; // Replace with your YouTube video ID
            const iframe = document.createElement("iframe");
            iframe.src = `https://www.youtube.com/embed/${videoId}?autoplay=1`;
            iframe.allow =
                "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share";
            iframe.className = "w-100 h-100 position-absolute top-0 start-0";
            iframe.title = "YouTube video player";
            iframe.allowFullscreen = true;
            thumbnail.innerHTML = "";
            thumbnail.appendChild(iframe);
            thumbnail.appendChild(
                document.getElementById("maxSTR").cloneNode(true),
            ); // Re-add button
        };

        thumbnail.addEventListener("click", playVideo);
        thumbnail.addEventListener("keydown", (event) => {
            if (event.key === "Enter" || event.key === " ") {
                event.preventDefault();
                playVideo();
            }
        });

        // Modal functionality
        const maxSTR = document.getElementById("maxSTR");
        const modal = document.getElementById("MaxModal");
        const closeModal = document.getElementsByClassName("close")[0];

        maxSTR.onclick = function () {
            modal.style.display = "block";
        };

        closeModal.onclick = function () {
            modal.style.display = "none";
        };

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        };
    });
</script>
