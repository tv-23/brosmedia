<style>
  .tech-card {
    background-color: white;
    cursor: pointer;
  }

  section.steps.section.tech {
    background-color: white !important;
    z-index: 64;
  }

  section.steps.section.techs container {
    background-color: white;
  }

  section.steps.section.techs > .container {
    background-color: white;
  }

  .tech-card {
    position: relative;
    background-color: white;
    cursor: pointer;
    overflow: hidden;
    border-radius: 8px; /* optional for smoother look */
  }

  /* Image style + transition */
  .tech-card img {
    width: 100%;
    transition: transform 0.3s ease;
    display: block;
  }

  /* Zoom effect */
  .tech-card:hover img {
    transform: scale(1.1);
  }

  /* Overlay */
  .tech-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(97 96 96 / 75%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  /* Show overlay on hover */
  .tech-card:hover::after {
    opacity: 1;
  }

  /* Alt text */
  .tech-card::before {
    content: attr(data-alt); /* use custom attribute */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-weight: bold;
    font-size: 20px;
    text-align: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 2;
  }

  /* Show text on hover */
  .tech-card:hover::before {
    opacity: 1;
  }

  @media (max-width: 500px) {
    .tech-card::before {        font-size: 16px;
    }

}
</style>

<section class="steps section techs">
  <!-- Section Title -->
  <div class="service-header">
    <div class="container">
      <h2 style="font-weight: 600;">
