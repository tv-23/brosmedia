      </h2>
    </div>
  </div>

  <div class="container">
    <div class="row g-4 justify-content-center">
      <!-- Technology Cards -->

      {
        techs.map((p) => (
          <div class="col-3 col-md-3 col-lg-4">
            <div class="tech-card" data-alt={p.alt}>
              <img src={p.img} alt={p.alt} />
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
