    }

    .carousel-item img {
      width: 100%;
      height: auto;
      filter: grayscale(100%);
      transition: filter 0.3s ease;
    }

    .carousel-item img:hover {
      filter: grayscale(0%);
    }

    @keyframes scroll {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }

    /* Duplicate track to loop smoothly */
    .carousel-track > * {
      user-select: none;
      pointer-events: none;
    }
