                <li data-filter="*" class="filter-active">
                    <i class="bi bi-grid-3x3"></i> Tous les projets
                </li>
                <li data-filter=".filter-website">
                    <i class="bi bi-code-slash"></i> Conception de site web
                </li>
                <li data-filter=".filter-adcreation">
                    <i class="bi bi-vector-pen"></i> Création publicitaire
                </li>
                <li data-filter=".filter-advideo">
                    <i class="bi bi-bar-chart-line"></i> Vidéo publicitaire
                </li>
            </ul>

            <div class="row g-4 isotope-container" data-aos-delay="300">
                {
                    portfolio.map((p) => (
                        <div
                            class={`col-xl-3 col-lg-4 col-md-6 portfolio-item isotope-item filter-${p.tag}`}
                        >
                            <article class="portfolio-entry">
                                <figure class="entry-image">
                                    <img
                                        src={p.img}
                                        class="img-fluid"
                                        alt=""
                                        loading="lazy"
                                    />
                                    <div class="entry-overlay">
                                        <div class="overlay-content">
                                            <div class="entry-meta badge bg-primary">
                                                UI/UX Design
                                            </div>
                                            <h3 class="entry-title">
                                                Mobile Banking App
