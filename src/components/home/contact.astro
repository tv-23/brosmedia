---
import ContactForm from "../contact-form.astro";
---

<section id="contact" class="contact section">
    <!-- Section Title -->
    <div class="container section-title" >
        <h2>Contact</h2>
        <div>
            <span>Entrons en</span>
            <span class="description-title">Contact</span>
        </div>
    </div>
    <!-- End Section Title -->

    <div class="container"  >
        <!-- Contact Info Boxes -->
        <div class="row gy-4 mb-5">
            <div class="col-lg-4"  >
                <div class="contact-info-box">
                    <div class="icon-box">
                        <i class="bi bi-geo-alt"></i>
                    </div>
                    <div class="info-content">
                        <h4>Notre adresse</h4>
                        <p>
                            NÂ° 12, Avenue Abi Anane El Marini RDC, Larache 92000
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4"  >
                <div class="contact-info-box">
                    <div class="icon-box">
                        <i class="bi bi-envelope"></i>
                    </div>
                    <div class="info-content">
                        <h4>Adresse e-mail</h4>
                        <p>
                            <a
                                href="https://mail.google.com/mail/?view=cm&fs=1&to=contact@brosmedia.ma"
                                target="_blank"
                                class="text-white text-decoration-none hover:text-gray-300"
                                aria-label="Email us at contact@brosmedia.ma"
                            >
                                contact@brosmedia.ma
                            </a>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4"  >
                <div class="contact-info-box">
                    <div class="icon-box">
                        <i class="bi bi-headset"></i>
                    </div>
                    <div class="info-content">
                        <h4>Heures d'ouverture</h4>
                        <p>Sunday-Fri: 9 AM - 6 PM</p>
                        <p>Saturday: 9 AM - 4 PM</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Google Maps (Full Width) -->
    <div class="map-section"  >
        <iframe
            src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3260.507825117629!2d-6.151087499999999!3d35.1938177!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd0bc9e75a89475b%3A0x9bf581fb40ca72df!2sBrosmedia%20%3A%20Agence%20de%20Communication%20%26%20Web%20Marketing%20%26%20Cr%C3%A9ation%20de%20Site%20Web!5e0!3m2!1sen!2sma!4v1754142270406!5m2!1sen!2sma"'
            width="100%"
            height="500"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <!-- Contact Form Section (Overlapping) -->
    <div class="container form-container-overlap">
        <div
            class="row justify-content-center"
            
            
        >
            <div class="col-lg-10">
                <ContactForm/>
            </div>
        </div>
    </div>
</section>