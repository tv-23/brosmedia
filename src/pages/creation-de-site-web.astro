<Layout>
  <style>
    h1 span {
      position: relative;
      color: transparent;
      -webkit-text-stroke: 1px #0a0f4f;
      line-height: 1.2em;
      padding: 2px;
      animation: displayText 12s infinite;
      animation-delay: calc(-3s * var(--i));
      font-weight: 700;
    }

    @keyframes displayText {
      0% {
        display: inline-block;
      }
      25%,
      100% {
        display: none;
      }
    }

    h1 span::before {
      content: attr(data-text);
      position: absolute;
      top: -2px;
      left: -2px;
      width: 0;
      height: 100%;
      color: white;
      overflow: hidden;
      white-space: nowrap;
      border: 2px solid #e30f29;
      box-sizing: border-box;
      background-color: #e30f29;
      padding: 2px;
      animation: animate 3s linear infinite;
      -webkit-text-stroke: 0px white;
    }

    @keyframes animate {
      0%,
      10%,
      100% {
        width: 0;
      }
      70%,
      90% {
        width: 100%;
      }
    }
  </style>

