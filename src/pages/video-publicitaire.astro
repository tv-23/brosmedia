---
import Layout from "../layouts/BaseLayout.astro";
import Header from "../components/services/advertising-video/header.astro";
import Overview from "../components/services/advertising-video/overview.astro";
import TelephoneAppointmentForm from "../components/telephone-appointment-form.astro";
import SideBar from "../components/services/advertising-video/side-bar.astro";
import ListContent from "../components/services/advertising-video/list-content.astro";
import CompleteOffer from "../components/services/advertising-video/complete-offer.astro";
import OurFeatures from "../components/services/advertising-video/our-features.astro";
import VideoPublicitaireSlider from "../components/services/advertising-video/video-publicitaire-slider.astro";
---

<link
  rel="preload"
  href="/assets/styles/services.css"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'"
/>
<noscript><link rel="stylesheet" href="/assets/styles/services.css"></noscript>

<link
  rel="preload"
  href="/assets/styles/sections/video-publicitaire-slider.css"
  as="style"
  onload="this.onload=null;this.rel='stylesheet'"
/>
<noscript><link rel="stylesheet" href="/assets/styles/sections/video-publicitaire-slider.css"></noscript>
<Layout
    pageTitle="Agence de production audiovisuelle - BROSMEDIA : Agence De Communication Digitale Au Maroc"
>
    <main class="main">
        <Header />

        <!-- Service Details Section -->
        <section id="service-details" class="service-details section">
            <div class="container">
                <div class="row gy-5">
                    <div class="col-lg-8 order-lg-1 order-2">
                        <div class="service-main-content">
                            <div class="service-header">
                                <h1>
                                    Un partenaire de confiance pour des
                                    résultats concrets
                                </h1>
                                <p class="lead">
                                    Chez Brosmedia, nous donnons vie à vos idées
                                    en créant des vidéos publicitaires
                                    percutantes qui valorisent votre activité.
                                    De la conception au montage, nous produisons
                                    du contenu visuel de qualité, pensé pour
                                    renforcer votre image et accroître votre
                                    visibilité en ligne.
                                </p>
                            </div>

                            <Overview />

                            <ListContent />

                            <CompleteOffer />
                            <OurFeatures />

                            <VideoPublicitaireSlider />

                            <br /><br />
                            <TelephoneAppointmentForm />
                            <br /><br />
                        </div>
                    </div>

                    <div class="col-lg-4 order-lg-2 order-1">
                        <SideBar />
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
