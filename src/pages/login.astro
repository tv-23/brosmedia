<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Connexion Admin</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex justify-content-center align-items-center vh-100">

  <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px; border-radius: 1rem;">
    <h1 class="card-title text-center mb-4 text-primary">Connexion Administrateur</h1>

    <div class="mb-3">
      <input type="email" id="email" class="form-control" placeholder="Adresse e-mail" autocomplete="username" />
    </div>

    <div class="mb-4">
      <input type="password" id="password" class="form-control" placeholder="Mot de passe" autocomplete="current-password" />
    </div>

    <button id="loginBtn" class="btn btn-primary w-100 fw-semibold mb-3">Se connecter</button>

    <div id="error" class="text-danger text-center d-none"></div>
  </div>

  <!-- Bootstrap Bundle JS (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const loginBtn = document.getElementById("loginBtn");
    const error = document.getElementById("error");

    loginBtn.addEventListener("click", () => {
      error.classList.add("d-none");
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();

      if (!email || !password) {
        error.textContent = "Veuillez remplir tous les champs";
        error.classList.remove("d-none");
        return;
      }

      fetch("http://localhost/wp/wordpress/wp-json/jwt-auth/v1/token", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ username: email, password: password }),
      })
      .then(response => {
        if (!response.ok) {
          throw new Error("Email ou mot de passe incorrect");
        }
        return response.json();
      })
      .then(data => {
        localStorage.setItem("token", JSON.stringify(data));
        localStorage.setItem("isAdmin", "true");

        window.location.href = "/admin";
      })
      .catch(err => {
        error.textContent = err.message;
        error.classList.remove("d-none");
      });
    });
  </script>

</body>
</html>
